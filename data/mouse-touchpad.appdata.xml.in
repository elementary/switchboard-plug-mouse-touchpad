<?xml version="1.0" encoding="UTF-8"?>
<component type="addon">
  <id>io.elementary.settings.mouse-touchpad</id>
  <extends>io.elementary.settings</extends>
  <name>Mouse &amp; Touchpad Settings</name>
  <summary>Configure mouse and touchpad</summary>
  <icon type="stock">preferences-desktop-peripherals</icon>
  <releases>
    <release version="7.0.0" date="2022-05-10" urgency="medium">
      <description>
        <p>Minor updates:</p>
        <ul>
          <li>Update for OS 7</li>
          <li>Updated translations</li>
        </ul>
      </description>
    </release>
    <release version="6.1.0" date="2021-09-22" urgency="medium">
      <description>
        <p>New features:</p>
        <ul>
          <li>New toggle for “Double-tap and move to drag”</li>
        </ul>
        <p>Minor updates:</p>
        <ul>
          <li>Updated translations</li>
        </ul>
      </description>
    </release>
    <release version="6.0.0" date="2021-07-15" urgency="medium">
      <description>
        <p>New features:</p>
        <ul>
          <li>Multitouch gesture options</li>
        </ul>
        <p>Minor updates:</p>
        <ul>
          <li>Add more snap points to pointer speed sliders</li>
          <li>Multitouch gesture options</li>
          <li>Redesigned touchpad settings</li>
          <li>Updated translations</li>
        </ul>
      </description>
    </release>
    <release version="2.4.2" date="2020-05-28" urgency="medium">
      <description>
        <ul>
          <li>Updated translations</li>
        </ul>
      </description>
    </release>
    <release version="2.4.1" date="2020-04-08" urgency="medium">
      <description>
        <ul>
          <li>Fix stretched switches when using large text</li>
          <li>Updated translations</li>
        </ul>
      </description>
    </release>
    <release version="2.4.0" date="2020-01-21" urgency="medium">
      <description>
        <p>New features:</p>
        <ul>
          <li>Add Dwell Click and Pointer size settings</li>
        </ul>
        <p>Other updates:</p>
        <ul>
          <li>Also listen to secondary button clicks when selecting Primary Button</li>
          <li>Updated translations</li>
        </ul>
      </description>
    </release>
    <release version="2.3.1" date="2019-11-30" urgency="medium">
      <description>
        <ul>
          <li>Fix an issue where primary button selection doesn't apply in left-to-right languages</li>
          <li>Updated translations</li>
        </ul>
      </description>
    </release>
    <release version="2.3.0" date="2019-11-15" urgency="medium">
      <description>
        <ul>
          <li>New Sidebar navigation</li>
          <li>Fix middle click not appearing</li>
          <li>Add Double-Click speed</li>
          <li>Updated translations</li>
        </ul>
      </description>
    </release>
  </releases>
